<h1>Edit Cheese @ViewBag.cheese.Name(id = @ViewBag.cheese.CheeseId)</h1>

<form method="post">

    <div class="form-group">
        <input type="hidden" value="@ViewBag.cheese.CheeseId" name="id" />
        <label for="name">Name</label>
        <input class="form-control" name="name" id="name" value="@ViewBag.cheese.Name" type="text" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input class="form-control" name="description" id="description" value="@ViewBag.cheese.Description" type="text" />
    </div>

    <input type="submit" value="Edit Cheese" />

</form>
